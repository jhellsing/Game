<Window x:Class="Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="788" ResizeMode="NoResize" PreviewKeyDown="Window_PreviewKeyDown" PreviewKeyUp="Window_PreviewKeyUp">
    <Grid Height="920" Width="920">
        <Canvas Name="Pole"  Width="750" Height="550" ClipToBounds="True" Margin="10,41,160,329">
            <Ellipse Name ="Object" Width="30" Height="30" Fill="Yellow" StrokeThickness="2" Stroke="Black" StrokeDashCap="Round" Canvas.Left="10" Canvas.Top="10" />
        </Canvas>
        <Label x:Name="ScoreLabel" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="140" FontSize="14" FontFamily="Comic Sans MS"/>
        <Label Content="Управление на стрелочки. Зелёные круги нужно подбирать, а красные стенки не трогать" HorizontalAlignment="Left" Margin="120,11,0,0" VerticalAlignment="Top" Width="640" FontSize="14" FontFamily="Comic Sans MS"/>

    </Grid>
</Window>
